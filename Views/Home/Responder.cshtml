@model EnquetesASP.Models.Resposta

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EnqueteWeb! :: Resposta</title>
</head>
<body>
    <h1>EnqueteWeb!</h1>
    <h2>Você teria coragem de fazer ua viagem sem volta apra marte?</h2>
    <h4>Preencha os capos e marque sua resposta</h4>
    <form method="post">
        <div>
            <label for="txtNome">Seu Nome: </label>
            <input type="text" name="Name" id="txtNome">
        </div>
        <div>
            <label for="txtEmail">Seu Email: </label>
            <input type="email" name="Email" id="txtEmail">
        </div>
        <div>
            Resposta:
            <div>
                <input type="radio" name="Choice" id="rdSim" value="true">
                <label for="rdSim">Sim</label>
            </div>
            <div>
                <input type="radio" name="Choice" id="rdNao" value="false">
                <label for="rdNao">Não</label>
            </div>
        </div>
        <input type="submit" value="Enviar Resposta">
    </form>
</body>
</html>